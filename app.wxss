/**app.wxss**/
@import "./assets/wxss/ripple.wxss";
@import "./assets/wxss/utils.wxss";

.page {
  position: absolute;
  width: 100%;
  min-height: 100%;
  box-sizing: border-box;
  background-color: rgb(241, 240, 246);
  padding-bottom: 100rpx;
  overflow: hidden;
}

button::after {
    border: 0; 
}

.field-set {
  background-color: #fff;
}

.field-item {
  display: flex;
  border-bottom: 1px dashed #eee;
  padding: 30rpx;
  font-size: 30rpx;
  color: #444;
}

.field-item:last-child {
  border-bottom: none;
}

.field-label {
  display: block;
  color: #999;
  white-space: nowrap;
  min-width: 100rpx;
  text-align: right;
}

.field-control {
  flex: 8;
  padding: 0 0 0 32rpx;
  font-size: 32rpx;
}

.field-input {
  font-size: 32rpx;
  padding: 6rpx 0;
}

.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
}

.button-group {
  display: flex;
}

.button {
  display: inline-block;
  flex: 1;
  border: 1px solid #eee;
  border-radius: 0;
  border-image: none;
  box-shadow: none;
  background-color: #fff;
  font-size: 32rpx;
}

.button-primary {
  background-color: #5872DE;
  border: 1px solid #5872DE;
  color: #fff;
}

.button-round {
  border-radius: 300rpx;
}

/* todo-add */
.todo-add {
  position: fixed;
  left: 80%;
  bottom: 60rpx;
  width: 90rpx;
  height: 90rpx;
  margin-left: -45rpx;
  border-radius: 50%;
  font-size: 60rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #5872DE;
  box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
  color: rgb(253, 247, 247);
}